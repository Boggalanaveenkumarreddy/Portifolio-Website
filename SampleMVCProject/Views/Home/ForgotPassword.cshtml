@model SampleMVCProject.Models.ForgotPassword
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container-fluid mt-5" style="height: 70vh;">
    <div class="row align-items-center pt-xl-5">
        <div class="col-md-6 d-flex justify-content-center align-items-center">
            <img src="~/ImageUpload/PageImages/forgot_password.svg" alt="Register" class="img-fluid" style="max-height: 100%; width: 75vh;" />
        </div>
        <div class="col-md-4">
            <div class="p-4">
                <form asp-action="ForgotPassword" >
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label">Email Address</label>
                        <input asp-for="Username" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Password</button>
                </form>
                <div class="mt-3 text-center">
                    <a href="/Home/EmployeeLogin">Back to Login</a>
                </div>
            </div>
        </div>
</div>
