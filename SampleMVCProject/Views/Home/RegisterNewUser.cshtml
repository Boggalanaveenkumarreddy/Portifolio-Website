@model SampleMVCProject.Models.Employee

@{
    ViewData["Title"] = "Create User";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow p-4 rounded">
                <h3 class="card-title text-center mb-4">Register New User</h3>
                <form asp-action="RegisterNewUser">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Username</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter username" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Gender</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="M" />
                            <label class="form-check-label">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="F" />
                            <label class="form-check-label">Female</label>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger d-block"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Department" class="form-label">Department</label>
                        <select asp-for="Department" class="form-control">
                            <option value="">--Select Department--</option>
                            <option value="IT">IT</option>
                            <option value=".Dotnet">DOTNET</option>
                            <option value="Java">Java</option>
                        </select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between">
                        <input type="submit" value="Register" class="btn btn-primary" />
                        <a asp-action="Home" class="btn btn-outline-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
