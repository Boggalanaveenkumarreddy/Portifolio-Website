@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<SampleMVCProject.Models.Employee>
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Employees List</h2>
    <a asp-action="CreateEmployee" class="btn btn-primary d-inline-flex align-items-center">
        <span class="fs-5 me-2">+</span> Employee
    </a>
</div>

<table class="table" id="example">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Email</td>
                <td>@(employee.Gender??"--")</td>
                <td>@(employee.Department??"-")</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Edit</a>
                    <button type="button"
                            class="btn btn-sm btn-danger ms-2"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal-@employee.Id">
                        Delete
                    </button>

                    <!-- Delete Confirmation Modal -->
                    <div class="modal fade" id="deleteModal-@employee.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@employee.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="deleteModalLabel-@employee.Id">Confirm Delete</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete <strong>@employee.Name</strong>?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form method="post" asp-action="DeleteEmployee" asp-route-id="@employee.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>
 
