@model SampleMVCProject.Models.EmployeePasswordUpdate

@{
    ViewData["Title"] = "UpdatePassword";
}
 
<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4 w-100" style="max-width: 500px; border-radius: 1rem;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Change Password</h4>
            <form asp-action="UpdatePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                    <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Enter current password" />
                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter new password" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Re-enter new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary w-50 me-2">Update</button>
                    <a asp-action="Home" class="btn btn-outline-danger w-50">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


