@model ErrorViewModel
@{
    ViewData["Title"] = "Oops!";
}

<div class="container d-flex flex-column align-items-center justify-content-center text-center" style="min-height: 90vh;">
    <!-- Funny GIF from Giphy -->
    <img src="~/ImageUpload/PageErrorImages/err.svg"
         alt="Error GIF" class="mb-4" style="max-width: 300px; border-radius: 12px;" />

    <h1 class="text-danger fw-bold">Oops! Something went wrong</h1>
 
    <a href="/" class="btn btn-outline-danger mt-4">
        <i class="bi bi-arrow-left-circle"></i> Back to Home
    </a>
</div>
